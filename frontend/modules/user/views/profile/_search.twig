<div class="person-search">

	{% set form = active_form_begin({
		'method': 'get'
	}) %}

	{{ form.field(model, 'id') | raw }}

	{{ form.field(model, 'first_name') | raw }}

	{{ form.field(model, 'last_name') | raw }}

	{{ form.field(model, 'gender') | raw }}

	{{ form.field(model, 'birthday') | raw }}

	{{ form.field(model, 'user_id') | raw }}

	{{ form.field(model, 'created_at') | raw }}

	{{ form.field(model, 'updated_at') | raw }}

	<div class="form-group">
		{{ html.submitButton(yii.t('app', 'Search'), {
			'class': 'btn btn-primary',
		}) | raw }}

		{{ html.resetButton(yii.t('app', 'Reset'), {
			'class': 'btn btn-default'
		}) | raw }}

	</div>

	{{ active_form_end() }}

</div>
