{% block content %}
	{{ set(this, 'title', model.last_name) }}
	<div class="person-view">

		<h1>{{ html.encode(this.title) }}</h1>

		<p>
			{{ html.a(yii.t('persons', 'Update'), {0:'update', 'id': model.id}, {'class': 'btn btn-primary'}) | raw }}

			{{ html.a(yii.t('persons', 'Delete'), {0:'delete', 'id': model.id}, {
				'class': 'btn btn-danger',
				'data': {
					'confirm': yii.t('persons', 'Are you sure you want to delete this item?'),
					'method': 'post',
				}
			}) | raw }}
		</p>

		{{ detail_view_widget({
			'model': model,
			'attributes': [
				'id',
				'first_name',
				'last_name',
				'gender',
				'birthday',
				'user_id',
				'created_at',
				'updated_at',
				'deleted:boolean',
			],
		}) | raw }}

	</div>
{% endblock %}