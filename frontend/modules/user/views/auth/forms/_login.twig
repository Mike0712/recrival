{% set form = active_form_begin({'id': 'login-form'}) %}

{{ form.field(model, 'username').textInput({'autofocus': true}) | raw }}

{{ form.field(model, 'password').passwordInput() | raw }}

{{ form.field(model, 'rememberMe').checkbox() | raw }}

    <div style="color:#999;margin:1em 0">
        If you forgot your password you can <a href="/user/auth/request-password-reset">reset it</a>
    </div>

    <div class="form-group">
        {{ html.submitButton('Login', {'class': 'btn btn-primary', 'name': 'login-button'}) | raw }}
    </div>

{{ active_form_end() }}